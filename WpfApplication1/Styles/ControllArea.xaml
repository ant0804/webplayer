<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Border}" x:Key="ControllArea" >
        <Setter Property="Background">
            <Setter.Value>
                    <RadialGradientBrush GradientOrigin="0.65,0.25" RadiusX="0.5" RadiusY="0.5" Center="0.5,0.5">
                    <GradientStop Color="Black" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
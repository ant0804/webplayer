<Window x:Class="Webplayer.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:local="clr-namespace:Webplayer"
        xmlns:inf="clr-namespace:Infrastructure;assembly=Infrastructure"
        mc:Ignorable="d"
        Title="Shell" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TabControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.FindRegion}" />
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static inf:RegionNames.StatusRegion}" />
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static inf:RegionNames.InfoRegion}"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <ContentControl Grid.Column="1" Grid.RowSpan="2" prism:RegionManager.RegionName="{x:Static inf:RegionNames.QueueRegion}" />
    </Grid>
</Window>
